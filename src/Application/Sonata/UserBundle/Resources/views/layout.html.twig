{% extends "TEWTPBundle::layout.html.twig" %}

{% block styles %}
    <link rel="stylesheet" href="{{asset('bundles/sonataadmin/vendor/AdminLTE/css/AdminLTE.css')}}">
    
{% endblock styles %}

{% block body %}
    {% if error %}
        <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
    {% endif %}

    <div class="form-box" id="login-box">
        <div class="header bg-aqua">Authentication</div>
        <form action="{{ path("fos_user_security_check") }}" method="post" role="form">
            <div class="body bg-gray">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                
                <div class="form-group control-group">
                    <input type="text" class="form-control" id="username"  name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/>
                </div>

                <div class="form-group control-group">
                    <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/>
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </div>

            </div>

            <div class="footer">
                <button type="submit" id="_submit" name="_submit" class="btn bg-orange">{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}</button>
                {#
                <p><a href="/app_dev.php/resetting/request" class="text-center">Forgotten password?</a></p>
                #}
            </div>
        </form>
    </div>
{% endblock body %}