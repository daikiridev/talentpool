{# TEW/src/TEW/TPBundle/Resources/views/CdeOperation/show.html.twig #}
{% extends '::base.html.twig' %}
{% block body -%}
    <h1>CdteOperation</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>User</th>
                <td>{{ entity.user }} - <em>last connection {{ entity.user.lastActivity|date('Y-m-d@H:i:s') }}</em></td>
            </tr>
            <tr>
                <th>Candidate</th>
                <td><a href="{{ path('tew_candidate_show', { 'id': entity.candidate.id }) }}">{{ entity.candidate }}</a></td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Operation</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Manual or auto?</th>
                <td>{{ entity.type }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ entity.role }}</td>
            </tr>
        </tbody>
    </table>

{% block actions %}
    <div class="btn-toolbar pull-right record_actions" role="group">
        <div class="btn-group">
            <a role="button"  class="btn btn-info" href="{{ path('tew_cdteoperation') }}">
                Back to the list
            </a>
        </div>
    {#
        <div class="btn-group">
            <a role="button" class="btn btn-warning" href="{{ path('tew_cdteoperation_edit', { 'id': entity.id }) }}" >
                Edit
            </a>
        </div>
    #}
        <div class="btn-group">
            {{ form(delete_form) }}
        </div>
    </div>
{% endblock actions %}
{% endblock %}
