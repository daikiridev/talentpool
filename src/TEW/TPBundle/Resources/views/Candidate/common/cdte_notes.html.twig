{#
 # Params: cdte, user
 #}
<div class="modal fade" id="noteModal{{cdte.id}}" tabindex="-1" aria-labelledby="addNoteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Staff notes for {{cdte}}
                    <a class="icon icon-plus-sign" data-toggle="collapse" data-target="#noteadd{{cdte.id}}"></a>
                </h4>
            </div><!-- /.modal-header -->
            <div class="modal-body collapse" id="noteadd{{cdte.id}}">
                {{ form_start(this_form)}}
                {{ form_row(this_form.title) }}
                {{ form_row(this_form.note) }}
                <div class="row">
                    <div class="btn-toolbar pull-right record_actions" role="group">
                        <div class="btn-group">
                            <a role="button"  class="btn btn-xs btn-warning addnote">add</a>
                        </div>   
                    </div>
                </div>
                {{ form_end(this_form)}}
            </div><!-- /.modal-body -->
            <div class='modal-footer'>        
                <table class='table table-striped table-hover'>
                    <thead>
                    <th>Date</th>
                    <th>Title</th>
                    <th>By</th>
                    </thead>
                    <tbody>
                        {% for note in cdte.notes %}
                            <tr data-toggle="popover" data-placement="bottom" data-content="{{note.note}}" data-delay='{ "show": 500, "hide": 200 }' data-html="true" style="cursor:help" data-trigger='hover'>
                                <td>{{note.date|date('d M Y')}}</td>
                                <td>{{note.title}}</td>
                                <td>{{note.author}}</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div><!-- /.modal-footer -->
            {#
            {{ form_start(this_form)}}
