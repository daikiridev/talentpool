{% block body -%}
    <h1>Candidate edit</h1>

    {{ form_start(edit_form, { 'attr' : { 'class': 'form-inline' } }) }}

    <div class="row">
        <fieldset class="col-lg-8">
            <legend>Main</legend>
            <div class='row'>
