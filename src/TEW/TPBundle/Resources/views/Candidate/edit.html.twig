    <br>
    {% block actions %}
        <div class="btn-toolbar pull-right record_actions" role="group">
            <div class="btn-group">
                {{ form_row(edit_form.submit) }}
            </div>
            {{ form_end(edit_form, {'render_rest': true}) }} {# this should be put before the form(delete_form) button #}
