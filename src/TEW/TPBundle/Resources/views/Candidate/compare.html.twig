{% extends '::base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" type="text/css" href="{{ asset('bundles/tewtp/css/bootstrap-magnify.css') }}" />
{% endblock styles %}

{% block scripts %}
    <script src="{{ asset('bundles/tewtp/js/bootstrap-magnify.js') }}"></script>
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
    </script>
{% endblock %}

{% block body -%}
    {% for candidate in candidates %}
        {# Should this candidate details be displayed? #}
        {% set anonymous = (not is_granted('ROLE_TEW_EXECUTOR')) and (candidate.creator.company != app.user.company) %}
        {% include('TEWTPBundle:Candidate:view.html.twig', {'entity': candidate}) %}
    {% endfor %}
{% endblock body %}