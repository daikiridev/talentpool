{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Candidate list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>Firstname</th>
                <th>Middlename</th>
                <th>Lastname</th>
                <th>Dateofbirth</th>
                <th>Email</th>
                <th>Phone1</th>
                <th>Phone2</th>
                <th>Level</th>
                <th>Creationdate</th>
                <th width="102">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tew_candidate_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.middleName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.dateOfBirth %}{{ entity.dateOfBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phone1 }}</td>
                <td>{{ entity.phone2 }}</td>
                <td>{{ entity.level }}</td>
                <td>{% if entity.creationDate %}{{ entity.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group btn-group-xs pull-right record_actions" role="group">
                            <a role="button"  class="btn btn-info" href="{{ path('tew_candidate_show', { 'id': entity.id }) }}">
                                show
                            </a>
                            <a role="button"  class="btn btn-warning" href="{{ path('tew_candidate_edit', { 'id': entity.id }) }}">
                                edit
                            </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% block actions %}
    <div class="btn-toolbar pull-right record_actions" role="group">
        <div class="btn-group">
            <a role="button"  class="btn btn-warning" href="{{ path('tew_candidate_new') }}">
                Create a new entry
            </a>
        </div>
    </div>
{% endblock actions %}

    {% endblock %}
