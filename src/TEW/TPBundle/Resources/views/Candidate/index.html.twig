{% extends '::base.html.twig' %}

{% block styles %}
    <link rel="stylesheet" href="//code.jquery.com/ui/1.10.3/themes/smoothness/jquery-ui.css">
    {# <link rel="stylesheet" href="{{asset('bundles/tewtp/css/jquery.dataTables.css')}}"> #}
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.5/css/jquery.dataTables.css">
    <link rel="stylesheet" href="//cdn.datatables.net/tabletools/2.2.3/css/dataTables.tableTools.css">
    <link rel="stylesheet" href="{{asset('bundles/tewtp/css/jquery.tagsinput.css')}}">
{% endblock styles %}
{% block scripts %}
    {# <script src="{{ asset('bundles/tewtp/js/jquery.dataTables.min.js') }}"></script> #}
    <script src="//cdn.datatables.net/1.10.5/js/jquery.dataTables.min.js"></script>
    <script>
        $(function () {
            $('[data-toggle="popover"]').popover()
        })
        $(document).ready(function () {
            $('#list').dataTable({
                "bJQueryUI": true,
                // "sPaginationType": "full_numbers",
                "bStateSave": true,
                "bProcessing": true,
                //  "sAjaxSource": '{#{url('_ajaxlistes', {'registrantTypeId': registrantType.id})}#}', 
                //  "sAjaxDataProp": "listes"
                "aoColumns": [
                    {"bSearchable": false, "bSortable": false}, // Check
                    {"bSearchable": false, "bSortable": false}, // Resume
                    {"bSearchable": true}, // Entry score
                    {"bSearchable": true}, // Name
                    {"bSearchable": true}, // Current position
                    {"bSearchable": false}, // Experience
                    {"bSearchable": true, "bSortable": false}, // Mobilities
                    {"bSearchable": true, "bSortable": false}, // Target functions
                    {"bSearchable": false, "bSortable": false}, // Talent pools
                    {"bSearchable": false, "bSortable": false}, // Tags
                    {"bSearchable": false}, // Added on
                    {"bSearchable": false}, // Origin
                    {"bSearchable": false, "bSortable": false} // Actions     
                ]
            });
        });
        $('.checkall').click(function () {
            $('#list').children('tbody').find(':checkbox').prop('checked',$(this).hasClass('icon-unchecked'));
            $(this).toggleClass('icon-unchecked');
            $(this).toggleClass('icon-check');
        });
    </script>
{% endblock %}
{% block body -%}
    <h1>Candidate list</h1>
{{ form_start(check_candidates_form) }}
    <table id="list" class="display" cellspacing="0">
        <thead>
            <tr>
                <th><i class="icon icon-unchecked checkall"></i></th>
                <th><i class="icon icon-paperclip"></i></th>
                <th>Entry score</th>
                <th>Name</th>
                <th>Curr. Pos.</th>
                <th>Exp.</th>
                <th>Mobility</th>
                <th>Target functions</th>
                <th>Talent pools</th>
                <th>Tags</th>
                <th>Added on</th>
                <th>Origin</th>
                <th width="110">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                {# select candidates to be displayed #}
                {% if is_granted('ROLE_TEW_EXECUTOR') %}
                    {% set visible_cdte = true %}
                {% else %}
                    {% set visible_cdte = false %}
                    {% for tp in entity.talentpools %}
                        {% if app.user.company in tp.companies %}
                            {% set visible_cdte = true %}
                        {% endif %}
                    {% endfor %}
                {% endif %}    

                {% if visible_cdte %}
                    {# Should this candidate details be displayed? #}
                    {% set anonymous = (not is_granted('ROLE_TEW_EXECUTOR')) and (entity.creator.company != app.user.company) %}
                    <tr>
                        <td>
                            {{ form_widget(check_candidates_form.candidates[entity.id]) }}
                        </td>
                        <td>
                        {% if entity.resume %}
                            <i class="icon icon-paperclip"></i>
                        {% endif %}
                        </td>
                        <td>
                            <div data-toggle="popover" data-placement="bottom" data-delay='{ "show": 500, "hide": 200 }' data-html="true" style="cursor:help"
                                 data-content="{{ entity.globalComment }}" data-trigger='hover'>
                                <small>{{ entity.globalScore|stars }}</small>
                            </div>
                        </td>
                        <td>{{ not anonymous?entity.firstName:'anonymous' }} {{ not anonymous?entity.lastName }} {{ not anonymous?entity.middleName }}</td>
                        {#
                        <td>{% if entity.dateOfBirth %}{{ entity.dateOfBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
                        #}
                        {#
                        <td>{{ entity.age }}</td>
                        #}
                        <td>{{ entity.function }} {{ entity.level }}</td>
                        <td>{{ entity.ageExperience }} yrs</td>
                        <td>
                            <small>
                            {% for mob in entity.mobilities %}
                                <span class='tag'>{{ mob }}</span>
                            {% endfor %}
                            </small>
                        </td>
                        <td>
                            <small>
                            {% for func in entity.targetFunctions %}
                                <span class='tag'>{{ func }}</span>
                            {% endfor %}
                            </small>
                        </td>
                        <td>
                            <small>
                            {% for tp in entity.talentpools %}
                                {% set visible_tp = (app.user.company in tp.companies) or is_granted('ROLE_TEW_EXECUTOR') %}
                                {% if visible_tp %}
                                    <span class='tag'>{{ tp }} {{ entity.averageScore(tp)|stars }}</span>
                                {% endif %}
                            {% endfor %}
                            </small>
                        </td>
                        <td>
                            <small>
                            {% for tag in entity.tags %}
                                <span class='tag'>{{ tag }}</span>
                            {% endfor %}
                            </small>
                        </td>
                        <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d') }}{% endif %}</td>
                        <td>{{ entity.origin }}</td>
                        <td>
                            <div class="btn-toolbar pull-right record_actions" role="group">
                                <div class="btn-group">
                                    <a role="button"  class="btn btn-xs btn-info" href="{{ path('tew_candidate_show', { 'id': entity.id }) }}">
                                        show
                                    </a>
                                </div>
                                {% if anonymous %}
                                {% else %}
                                    <div class="btn-group">
                                        <a role="button"  class="btn btn-xs btn-warning" href="{{ path('tew_candidate_edit', { 'id': entity.id }) }}">
                                            edit
                                        </a>
                                    </div>
                                {% endif %}
                                {% if is_granted("ROLE_TEW_EXECUTOR") and delete_forms[entity.id] is defined %}
                                    <div class="btn-group">        
                                        {{ form(delete_forms[entity.id]) }}
                                    </div>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                {% else %}
                <div style="display: none">
                    {{ form_widget(check_candidates_form.candidates[entity.id]) }}
                </div>
                {% endif %}
            {% endfor %}
        </tbody>
    </table>
        <br>
        <div class='col-lg-5'>
           {{ form_widget(check_candidates_form.selectactions) }}
        </div>
        <div class='col-lg-6'>
            {{ form_widget(check_candidates_form.submit) }}
        </div>
    {{ form_end(check_candidates_form) }}
    {% block actions %}
        <div class="btn-toolbar pull-right record_actions" role="group">
            <div class="btn-group">
                <a role="button"  class="btn btn-warning" href="{{ path('tew_candidate_new') }}">
                    Create a new entry
                </a>
            </div>
        </div>
    {% endblock actions %}
{% endblock %}
