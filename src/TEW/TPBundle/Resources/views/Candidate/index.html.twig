{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Candidate list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Gender</th>
                <th>Firstname</th>
                <th>Middlename</th>
                <th>Lastname</th>
                <th>Dateofbirth</th>
                <th>Email</th>
                <th>Phone1</th>
                <th>Phone2</th>
                <th>Level</th>
                <th>Creationdate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tew_candidate_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.gender }}</td>
                <td>{{ entity.firstName }}</td>
                <td>{{ entity.middleName }}</td>
                <td>{{ entity.lastName }}</td>
                <td>{% if entity.dateOfBirth %}{{ entity.dateOfBirth|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.email }}</td>
                <td>{{ entity.phone1 }}</td>
                <td>{{ entity.phone2 }}</td>
                <td>{{ entity.level }}</td>
                <td>{% if entity.creationDate %}{{ entity.creationDate|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('tew_candidate_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('tew_candidate_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('tew_candidate_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
