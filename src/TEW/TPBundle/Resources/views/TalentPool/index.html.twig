{% extends '::base.html.twig' %}

{% block body -%}
    <h1>TalentPool list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Profiles</th>
                <th>Creation date</th>
                <th>Creator</th>
                <th width="102">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('tew_talentpool_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.profiles|join(' / ') }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d') }}{% endif %}</td>
                <td>{{ entity.creator }}</td>
                <td>
                    <div class="btn-group btn-group-xs pull-right record_actions" role="group">
                            <a role="button"  class="btn btn-info" href="{{ path('tew_talentpool_show', { 'id': entity.id }) }}">
                                show
                            </a>
                            <a role="button"  class="btn btn-warning" href="{{ path('tew_talentpool_edit', { 'id': entity.id }) }}">
                                edit
                            </a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% block actions %}
    <div class="btn-toolbar pull-right record_actions" role="group">
        <div class="btn-group">
            <a role="button"  class="btn btn-warning" href="{{ path('tew_talentpool_new') }}">
                Create a new entry
            </a>
        </div>
    </div>
{% endblock actions %}
    {% endblock %}
